## local.properties.example
# Copy this file to local.properties and fill in your API keys
# DO NOT commit local.properties - it's in .gitignore

# Android SDK location (auto-generated by Android Studio)
sdk.dir=/path/to/your/Android/sdk

# ============================================
# API Keys - Required for the app to work
# ============================================

# Gemini API Key (Get from: https://ai.google.dev)
# Used for LLM game generation
GEMINI_API_KEY=your_gemini_api_key_here

# Future LLM Providers (Optional)
# OPENAI_API_KEY=your_openai_key_here
# CLAUDE_API_KEY=your_claude_key_here
# COHERE_API_KEY=your_cohere_key_here

